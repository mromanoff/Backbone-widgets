{
  "env": {
    "node": true,
    "browser": true
  },

  "globals":{
    "jQuery": false,
    "$": true,
    "Backbone": true,
    "_": true
  },

  "rules": {
    "block-scoped-var": 2,
    "brace-style": [2, "1tbs"],
    "camelcase": 1,
    "curly": 2,
    "eol-last": 2,
    "eqeqeq": [2, "smart"],
    "max-depth": [1, 3],
    "max-statements": [1, 15],
    "max-len": [1, 80],
    "new-cap": 1,
    "no-extend-native": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-trailing-spaces": 2,
    "no-use-before-define": [2, "nofunc"],
    "no-unused-vars": 1,
    "quotes": [2, "single", "avoid-escape"],
    "semi": [2, "always"],
    "space-after-keywords": [2, "always"],
    "space-in-brackets": [2, "never"],
    "space-unary-ops": 2,
    "no-underscore-dangle": 1,

    "backbone/model-defaults": 1,
    "backbone/defaults-on-top": 1,
    "backbone/collection-model": 1,
    "backbone/no-view-onoff-binding": 1,
    "backbone/initialize-on-top": [1, { "View": ["tagName", "className", "events"], "Model": ["defaults", "url", "urlRoot"], "Collection": ["model", "url"] }]
  },

  "plugins": [
    "backbone"
  ]
}

